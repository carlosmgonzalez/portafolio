---
import Section from "../Section.astro";

interface Props {
  title: string;
  education: {
    institution: string;
    startDate: string;
    endDate: string;
    area: string;
    description: string;
  }[];
}

const { title, education } = Astro.props;
---

<Section title={title}>
  <ul>
    {
      education.map(
        ({ institution, startDate, endDate, area, description }) => {
          let years;
          if (endDate) {
            years = `${startDate} - ${endDate}`;
          } else {
            years = `${startDate}`;
          }

          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>{institution}</h3>
                    <h4>{area}</h4>
                  </div>

                  <time>{years}</time>
                </header>

                <footer>
                  <p>{description}</p>
                </footer>
              </article>
            </li>
          );
        },
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  footer p {
    white-space: pre-line;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
