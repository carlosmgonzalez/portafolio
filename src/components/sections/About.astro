---
interface Props {
    title: string;
    summary: string;
}

const { title, summary } = Astro.props;
---

<section>
    <h2 class="title_about">{title}</h2>
    <p class="summary_about">{summary}</p>
</section>

<style>
    section {
        max-width: 700px;
        margin: 0 auto 48px;
    }

    h2 {
        margin-bottom: 8px;
        font-weight: 700;
        line-height: 1.5;
        font-size: 1.5rem;
    }

    @media (width <= 700px) {
        section {
            margin-bottom: 38px;
            padding: 10px 10px;
        }
    }
</style>
