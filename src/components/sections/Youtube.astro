---
interface Props {
  title: string;
  youtube: {
    subtitle: string;
    summary: string;
    href: string;
    src: string;
  }[];
}

const { title, youtube } = Astro.props;
---

<section>
  <h2 class="title_about">{title}</h2>
  {
    youtube.map((video) => (
      <div class="container">
        <a href={video.href}>
          <img src={video.src} alt="portada youtube video" />
          <div class="select-container">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-external-link-icon lucide-external-link"
            >
              <path d="M15 3h6v6" />
              <path d="M10 14 21 3" />
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
            </svg>
          </div>
        </a>
        <div>
          <a href={video.href}>
            <h3>{video.subtitle}</h3>
          </a>
          <p>{video.summary}</p>
        </div>
      </div>
    ))
  }
</section>

<style>
  section {
    max-width: 700px;
    margin: 0 auto 48px;
  }

  svg {
    color: rgb(200, 200, 200);
  }

  .container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    column-gap: 20px;
  }

  .select-container {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    border-radius: 16px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: transparent;
    opacity: 0;
    transition:
      opacity 0.2s ease-in-out,
      background-color 0.2s ease-in-out;
  }

  a:hover .select-container {
    background-color: rgba(200, 200, 200, 0.4);
    opacity: 1;
  }

  a {
    position: relative;
  }

  h2 {
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
  }

  h3 {
    font-size: 1.1rem;
    font-weight: 500;
    color: black;
    margin-bottom: 4px;
  }

  h3:hover {
    text-decoration: underline;
  }

  img {
    aspect-ratio: 16 / 9;
    object-fit: cover;
    width: 320px;
    border-radius: 16px;
  }

  @media (max-width: 700px) {
    section {
      margin-bottom: 38px;
      padding: 10px 10px;
      display: flex;
      flex-direction: column;
    }

    .container {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
    }

    img {
      aspect-ratio: 16 / 9;
      object-fit: cover;
      width: 250px;
      border-radius: 16px;
    }
  }

  @media (max-width: 500px) {
    .container {
      flex-direction: column;
    }

    img {
      aspect-ratio: 16 / 9;
      object-fit: cover;
      width: 100%;
      border-radius: 16px;
    }
  }
</style>
